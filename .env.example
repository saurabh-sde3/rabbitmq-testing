# Environment Configuration for RabbitMQ Testing Application
# Copy this file to .env and modify values as needed

# Celery Broker URL (RabbitMQ)
# Default: amqp://guest:guest@localhost:5672//
# Production: amqp://username:password@rabbitmq-host:5672/vhost
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//

# Celery Result Backend
# Options: rpc://, redis://localhost:6379/0, db+postgresql://user:pass@host/db
CELERY_RESULT_BACKEND=rpc://

# RabbitMQ Management Settings (optional)
RABBITMQ_MANAGEMENT_HOST=localhost
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_MANAGEMENT_USER=admin
RABBITMQ_MANAGEMENT_PASS=admin123

# Application Settings
LOG_LEVEL=INFO
WORKER_CONCURRENCY=4
TASK_TIME_LIMIT=1800
TASK_SOFT_TIME_LIMIT=1500
